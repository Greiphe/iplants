<body class="text-center">

  <main class="form-signin">

      <img class="mb-4" src="assets/img/logo.png" width="250">
      <h1 class="h3 mb-3 fw-normal text-white">Faça login</h1>

      <form id="myForm" action="/login" method="post">
      <div class="form-floating">
        <input  type="text" class="form-control border border-1" name="usuario" id="usuario" required>
        <label for="usuario">Usuario</label>
      </div>

      <div class="input-group mb-3 form-floating mt-2">
        <input type="password" class="form-control" name="senha" aria-describedby="basic-addon2" id="senha" required>
        <label for="senha">Senha</label>
        <div class="input-group-append ">
          <a href="#" onclick="myFunction()">
          <button class="btn btn-light h-100" type="button" >

              <img class="form-floating" src="assets/img/olho.png" width="20px" alt="visualizar senha">

          </button>
        </a>
        </div>
      </div>

      <button class="w-50 h-auto btn btn-lg btn-success" onclick="changeName()" id="submitButton" type="submit">Login</button>
      <div class="container mt-3">
        <div class="row">
          <div class="col-6">

            <p><a href="#">Resgatar senha</a></p>
          </div>
          <div class="col-6">
            <p><a href="cadastro">Cadastre-se</a></p>
          </div>
        </div>
      </div>
      <p class="mt-5 mb-3 text-muted">Iplants &copy; 2023</p>
    </form>
    <script>

    function myFunction() {
      var x = document.getElementById("senha");
      if (x.type === "password") {
        x.type = "text";
      } else {
        x.type = "password";
      }
    }

      //vadidação do formulario
      const form = document.querySelector('#myForm');
      const nameInput = document.querySelector('#usuario');
      const senhaInput = document.querySelector('#senha');
      const submitButton = document.querySelector('#submitButton');

      submitButton.addEventListener('click', function(event) {
        if (nameInput.value === '' || senhaInput.value === '') {
          event.preventDefault(); // impedir que o formulário seja enviado
          alert('Por favor, preencha todos os campos');
        }
      });
      // armazenar o valor do input no localStorage
      const usernameInput = document.getElementById("usuario");
      const submitBtn = document.getElementById("submitButton");
      const usernameDisplay = document.getElementById("username-display");
      submitBtn.addEventListener("click", function() {
      const username = usernameInput.value;
      localStorage.setItem("username", username);
      updateUsernameDisplay();
    });
      // exibir nos o nome em todos os documentos 
        function updateUsernameDisplay() {
        const username = localStorage.getItem("username");
        if (username) {
          usernameDisplay.textContent = username;
        }
      }
      updateUsernameDisplay();
    </script>

  </main>
</body>
