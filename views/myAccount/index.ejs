        function validarLetrasNome_Person() {
          let inputNome_Person = document.getElementById("validationCustom01");
          let Nome_Person = inputNome_Person.value;
          let regex = /^[a-zA-Z ]+$/; // expressão regular que permite somente letras e espaços

          if (!regex.test(Nome_Person)) {
            inputNome_Person.value = Nome_Person.replace(/[^a-zA-Z ]/gi, ""); // remove caracteres que não são letras ou espaços
          }
        }

        function validarLetrasSobreNome_Person() {
          let inputSobreNome_Person = document.getElementById("validationCustom02");
          let SobreNome_Person = inputSobreNome_Person.value;
          let regex = /^[a-zA-Z ]+$/; // expressão regular que permite somente letras e espaços

          if (!regex.test(SobreNome_Person)) {
            inputSobreNome_Person.value = SobreNome_Person.replace(/[^a-zA-Z ]/gi, ""); // remove caracteres que não são letras ou espaços
          }
        }

        const inputPhonePerson = document.getElementById('validationCustom03');
        inputPhonePerson.addEventListener('input', function (event) {
          if (event.target.value.length > 13) {
            event.target.value = event.target.value.slice(0, 13);
          }
        });
      </script>
      <script>
        // JavaScript
        let imagemSelecionada; // Variável para armazenar a imagem selecionada

        const novaImagem = 'assets/svg/ghost.svg'; // Caminho para a imagem pré-definida
        const inputImagem = document.getElementById('input-imagem');
        const btnEscolherImagem = document.getElementById('btn-escolher-imagem');
        const btnSubstituirImagem = document.getElementById('btn-substituir-imagem');
        const imagem = document.getElementById('imagem');
        const picUser = document.getElementById('picUser');
        const localStorageKey = 'profilePicUrl';
        const storedImageUrl = localStorage.getItem(localStorageKey);
        if (storedImageUrl) {
          imagem.src = storedImageUrl;
          picUser.src = storedImageUrl;
        }

        // Event listener para o input de imagem
        inputImagem.addEventListener('change', (event) => {

          const file = event.target.files[0];
          if (!file || !file.type.startsWith('img/')) {
            return;
          }

          const reader = new FileReader();
          reader.addEventListener('load', (event) => {
            const imageUrl = event.target.result;
            imagem.src = imageUrl;
            picUser.src = imageUrl;
            imagem.style.display = 'block';
            btnSubstituirImagem.style.display = 'block';
            localStorage.setItem(localStorageKey, imageUrl);
          });
          reader.readAsDataURL(file);
        });

        // Event listener para o botão de escolher imagem
        btnEscolherImagem.addEventListener('click', () => {
          inputImagem.click();
        });

        // Event listener para o botão de substituir imagem
        btnSubstituirImagem.addEventListener('click', () => {

          imagem.src = novaImagem;
          picUser.src = novaImagem;
          imagemSelecionada = null; // Reseta a imagem selecionada
          localStorage.removeItem(localStorageKey);
        });
      </script>
