        function calcularTotal() {
          const linhasProdutos = document.querySelectorAll('#table1 tbody tr:not(.text-dark)');
          let totalQuantidade = 0;
          let totalPreco = 0;

          linhasProdutos.forEach(linha => {
            const quantidade = parseInt(linha.querySelector('td:nth-child(2)').textContent);
            const preco = parseFloat(linha.querySelector('td:nth-child(4)').textContent);

            if (!isNaN(quantidade)) {
              totalQuantidade += quantidade;
            }

            if (!isNaN(preco)) {
              totalPreco += preco;
            }
          });

          const linhaTotalQuantidade = document.querySelector('#table1 tbody tr.text-dark th:nth-child(2)');
          const linhaTotalPreco = document.querySelector('#table1 tbody tr.text-dark th:nth-child(4)');
